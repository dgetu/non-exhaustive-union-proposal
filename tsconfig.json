{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "lib": [],
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node10",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist-esm",
    "declarationDir": "./types"
  },
  "files": ["./src/*"],
  "include": ["src/**/*.ts"],
  "exclude": ["./dist-esm", "./types"]
}
